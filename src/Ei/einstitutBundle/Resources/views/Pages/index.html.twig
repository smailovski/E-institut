                                                <li class="{{ colorClass }}"><a href="#"><b>{{ Tuto.dateDebut|date("H:I", "Europe/Paris") }}</b> {{ Tuto.titre }} </a></li>

                                                                     {% set Number = Number + 1 %}
                                                                     {% set NumberByDay = Number %}
                                                                {% endif %}

                                                            {% endfor %}

