            <!-- Note: for tables, a wrapping div is required -->
            <div class="no-margin">
                <table cellspacing="0" class="list-calendar">
                    <tbody>


                        <!-- Use the class empty to change visual style -->
                                                {% set Number    = 0 %}
                                                {% set year    = 'Now'|date('Y') %}
                                                {% set month   = 'Now'|date('m') %}
                                                {% set day     = 'Now'|date('d') %}
                                                {% set LastDay = 'Now'|date('t') %}
                                                {% set CalcDay = 0  %}
                                                {% for i in 1..5 %}
                        <tr class="empty">
                                                    {% set CalcDay = day + i - 1  %}
                                                        {% if CalcDay > LastDay %}
                                                            {% set CalcDay = CalcDay - LastDay %}
                                                            {% if CalcDay == 1 %}
                                                                {% set month = month + 1  %}
                                                                {% if month == 12 %}
                                                                    {% set month = 1  %}
                                                                    {% set year = year + 1 %}
                                                                {% endif %}
                                                            {% endif %}
                                                        {% endif %}


                                <th scope="row">
                                                        {% if CalcDay < 10 %}
                                                            {% set CalcDay = "0"~CalcDay %}
                                                        {% endif %}
                                                            {{ CalcDay }}
                                    </th>
                                    <td>  

                                                         {% set _date = CalcDay  ~ "-" ~  month  ~ "-" ~  year  %}

                                                        {% if i == 1 %}
                                        Aujourd'hui
                                                        {% else %}
                                                            {{ _date|date('m-Y') }}

                                                        {% endif %}



                                                      {# Tuto.dateDebut|date("F jS \\a\\t g:ia")#}
                                        <!-- Full events list -->
