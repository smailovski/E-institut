	function addTag()
	{
		console.log("TRK", $('#id_tags').val());
		$('#tags').append("<li>"+$('#id_tags').val()+"</li> ");
	}
	
	
	$("#Ajouter_ressource").click(function(){
        console.log("TRK");
			var tags = [];
