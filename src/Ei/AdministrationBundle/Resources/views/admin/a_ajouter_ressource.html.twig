			//$(this).find('li').toArray();
			$(this).find('li').each(function(){
				var current = $(this);
				tags.push( current.text() );
				console.log("Li : ", current.text());
			});
			//alert(tags);
		});
		
	
		$.post(
		"{{ path('Ressources_Ajouter') }}",
		{param_titre: "TRK" ,param_tags :  tags },
			function(message)
			{  
				console.log("TRK Sucssess");
			}
		);
    });   
	
	
	
	
	</script>
