{% block content %}

<section class="grid_9">
			
				
			<div class="fieldset with-legend grey-bg ">
				<div class="legend">Ressources</div>
					
			
			
			<div class="block-border" id="status-bar">
	
		<a href="javascript:void(0)" class="button" title=""> <strong>Toutes les ressources</strong></a>
			
			<span class="float-left">Nouvelle ressource</span>
	
	</div>
			
	
	<br><br>
					
					<form class="block-content form" id="simple_form" method="post" action="#">
				
				<span class="label required">
											Titre 
										</span>
								<input id="complex-fr-subtitle" class="full-width" type="text" value="" name="nom"> <br><br>
										<span class="label required">
											Description
										</span>
										
										<textarea id="editable" class="full-width" rows="10" cols="7" name="description">

										</textarea><br><br>
							
							
										<span class="label required">
											 URL 
										</span>
								<input id="complex-fr-subtitle" class="full-width" type="text" value="" name="url"> <br><br>
								<div class="columns">
							<p class="colx2-left">
									<span class="label required">
											Tags
									</span>
								<input id="complex-fr-subtitle" class="full-width" type="text" value="" name="tags"> <br><br>
								
							</p>
							<p class="colx2-right">
							<span class="label ">
										&nbsp;	
									</span>
								<button type="button">Ajouter</button> <br><br>
								
								</p>
								</div>
									
			<div class="block-border">
			    <div class="block-content no-title">
			    	<h3>Tags</h3>
			    
					<ul class="tags">
					   
					</ul>

				</div>
			</div><br>
			
				<span class="label required"> Domaine </span>
					<select class="full-width" name="Domaine" id="stats-sites-0">
						<option value="0">Informatique</option>
						<option value="0">Economie</option>
					</select><br><br>		
				
				<span class="label required"> Théme</span>
					<select class="full-width" name="theme" id="stats-sites-0">
						<option value="0">Développemnt</option>
						<option value="0">Réseau</option>
					</select><br><br>	
						
				<span class="label required">Type</span>
					<select class="full-width" name="type" id="stats-sites-0">
						<option value="0">Vidéo</option>
						<option value="0">Document PDF</option>
					</select>
						
			<div class="float-right"><br>
			<button type="button"><img src="{{ asset('bundles/eieinstitut/images/icons/fugue/cross-circle.png') }}" width="16" height="16"> Annuler</button>
			<button type="button"><img src="{{ asset('bundles/eieinstitut/images/icons/fugue/tick-circle.png') }}" width="16" height="16"> Enregistrer</button>
								
			</div>
				</form></div>
			
				
			
			
				
		
