    <div class="clear"></div>
		<section class="grid_9">
			<div class="block-border"><div class="block-content">
				<h1>Actualités</h1>																	
				<div class="block-controls">
					<ul class="controls-buttons">
						<li><a href="#" title="Previous page"><img src="{{ asset('bundles/eieinstitut/images/icons/fugue/navigation-180.png') }}" width="16" height="16"></a></li>
						<li class="sep"></li>
						<li><a href="#"><strong>Les actualités</strong></a></li>
						<li class="sep"></li>
						<li><a href="#" title="Next page"><img src="{{ asset('bundles/eieinstitut/images/icons/fugue/navigation.png') }}" width="16" height="16"></a></li>
					</ul>
				</div>
				{% for actualite in actualites %}
					
